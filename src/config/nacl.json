[
    {
      "group": "admin",
      "permissions": [
        {
          "resource": "*",
          "methods": "*",
          "action": "allow"
        }
      ]
      
    },
    {
      "group": "user",
      "permissions": [
        {
          "resource": "*",
          "methods": "*",
          "action": "deny"
        },
        {
          "resource": "api/user/*",
          "methods": ["PUT", "DELETE"],
          "action": "deny"
        },
        {
          "resource": "api/user/*",
          "methods": ["GET", "POST"],
          "action": "allow"
        },
        {
          "resource": "auth/*",
          "methods": ["POST"],
          "action": "allow"
        },
        {
          "resource": "api/query/*",
          "methods": ["GET"],
          "action": "allow"
        }
        
      ]
    }
  ]